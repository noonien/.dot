;;;;;;;;;;;;;;;;
; colors to use 
;;;;;;;;;;;;;;;;
[colors]
transparent = #000f0f0f

bg = #1E2932
fg = #CFD4D9

foreground-alt = ${self.fg}

active-bg = #2E3F4D
active-fg = ${self.fg}

hint-bg = #3E252E
hint-fg = ${self.fg}

urgent-bg = #100e38
urgent-fg = ${self.fg}

primary = #ffb52a
secondary = #e60053
alert = #bd2c40


;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; common settings to all bars
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
[bar-common]
monitor = ${env:MONITOR:}

background = ${colors.bg}
foreground = ${colors.fg}

dpi=0
font-0 = Anonymice Nerd Font Mono Regular:pixelsize=15;3
font-1 = unifont:fontformat=truetype:size=12:antialias=false;2
font-2 = siji:pixelsize=10;2

height=33
border-size = 12
border-bottom-size = 0
padding-right = 3
;module-margin-left = 0
;module-margin-right = 4

fixed-center = true

wm-restack = i3

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

;;;;;;;;;;;;;;;;;;;;
; main bar settings
;;;;;;;;;;;;;;;;;;;;
[bar/main]
inherit = bar-common
modules-left = i3 xwindow
modules-center = btc-usd weather date
modules-right = wlan audio filesystem cpu memory battery xkeyboard powermenu

tray-position = right
tray-padding = 2

;;;;;;;;;;;;;;;;;;;;;;;;;
; secondary bar settings
;;;;;;;;;;;;;;;;;;;;;;;;;
[bar/secondary]
inherit = bar-common
modules-left = i3 xwindow
modules-right = date powermenu


;;;;;;;;;;;;;;;;;;;;;;;;;
; title of active window
;;;;;;;;;;;;;;;;;;;;;;;;;
[module/xwindow]
type = internal/xwindow
label = %title:0:100:...%

;;;;;;;;;;;;;;;;;
; keyboard state
;;;;;;;;;;;;;;;;;
[module/xkeyboard]
type = internal/xkeyboard

format-prefix = "ÓâØ "

label-layout = %layout%

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.hint-bg}
label-indicator-foreground = ${colors.hint-fg}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /home

label-mounted = HDD %free%
label-unmounted = %mountpoint% not mounted
label-unmounted-background = ${colors.hint-bg}
label-unmounted-foreground = ${colors.hint-fg}

;;;;;;;;;;;;;;;;;;;;
; i3 workspace tabs
;;;;;;;;;;;;;;;;;;;;
[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

; mode = ex. resize
label-mode = %mode%
label-mode-padding = 2
label-mode-background = ${colors.hint-bg}
label-mode-foreground = ${colors.hint-fg}

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-padding = 2
label-focused-background = ${colors.active-bg}
label-focused-foreground = ${colors.active-fg}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-padding = 2
label-visible-foreground = ${self.label-focused-foreground}
label-visible-background = ${self.label-focused-background}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-padding = 2
label-urgent-background = ${colors.hint-bg}
label-urgent-foreground = ${colors.hint-fg}


